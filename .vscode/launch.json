{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Chat Request",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/debug_chat.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug API Server",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--port",
                "8081"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}